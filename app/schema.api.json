{
  "openapi": "3.0.0",
  "info": {
    "title": "Joke Generator API",
    "version": "1.0.0",
    "description": "API for generating and managing jokes"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/jokes": {
      "get": {
        "summary": "Get all jokes",
        "responses": {
          "200": {
            "description": "List of jokes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Joke"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new joke",
        "requestBody": {
          "description": "Joke object to be created",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewJoke"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Joke created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          }
        }
      }
    },
    "/jokes/{id}": {
      "get": {
        "summary": "Get a specific joke by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the joke to retrieve",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Joke found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          },
          "404": {
            "description": "Joke not found"
          }
        }
      },
      "put": {
        "summary": "Update a specific joke by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the joke to update",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Joke object to be updated",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateJoke"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Joke updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          },
          "404": {
            "description": "Joke not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a specific joke by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the joke to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Joke deleted successfully"
          },
          "404": {
            "description": "Joke not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Joke": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        },
        "required": ["id", "title", "content"]
      },
      "NewJoke": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        },
        "required": ["title", "content"]
      },
      "UpdateJoke": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        },
        "required": ["title", "content"]
      }
    }
  }
}
